FROM golang:1.17.2-alpine
ENV USER_PORT=8087 \
    VIDEO_PORT=8088 \
    API_PORT=8082
RUN go env -w GO111MODULE="on"
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN apk update
RUN apk add ffmpeg
WORKDIR $GOPATH/douyin
COPY . $GOPATH/douyin
RUN go build ./cmd/api/
EXPOSE 8082
ENTRYPOINT ["./api"]
